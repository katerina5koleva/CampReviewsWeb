@model CampRating.Data.Models.Camp

@{
    ViewData["Title"] = "Delete Camp";
}

<h2 class="text-center mb-4 text-danger">@ViewData["Title"]</h2>

<div class="card mx-auto shadow-sm">
    <img src="@Model.Image" class="card-img-top" alt="@Model.Name">
    <div class="card-body text-center">
        <h5 class="card-title">@Model.Name</h5>
        <div class="row">
            <div class="col-6">
                <p class="card-text">
                    <i class="bi bi-geo-alt"></i>
                    <strong>Longitude:</strong> @Model.Longitude
                </p>
            </div>
            <div class="col-6">
                <p class="card-text">
                    <i class="bi bi-geo-alt"></i>
                    <strong>Latitude:</strong> @Model.Latitude
                </p>
            </div>
        </div>
        <p class="card-text">
            @Model.Description
        </p>
    </div>

    <div class="card-footer text-center">
        <form asp-action="DeleteCamp" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/camps.delete.css" />
}